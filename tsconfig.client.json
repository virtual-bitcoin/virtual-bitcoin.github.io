{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext",
      "ScriptHost"
    ],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./client",
    "outDir": "dist"
  },
  "include": [
    "./client",
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "website",
    "public"
  ],
}